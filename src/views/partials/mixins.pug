  else if userRole === "musician"
    a.item__link(href=`${routes.userMusician}${routes.expertDetail}/${item._id}`) View Profile

//- User Profile Mixin
mixin userProfile(user)
  .user__profile-img(style=`background: ${user.gradientColor};`)
    if user.role === "expert"
      //- 평점 받은게 하나 이상 있을 때
      if user.averageRate
        //- 별점 1.5 미만
        if user.averageRate < 1.5
          img.badge__img(src=`${imgPath}/public/black_badge.png`)
        //- 좋아요 15개 이상, 서비스 제공 5개 이상, 별점 4 이상
        else if user.averageRate >= 4 && user.likeID.length >= 15 || user.averageRate >= 4 && user.approvedOffers.length >= 5 || user.approvedOffers.length >= 5 && user.likeID.length >= 15
          img.badge__img(src=`${imgPath}/public/silver_badge.png`)
        //- 좋아요 30개 이상, 서비스 제공 20개 이상, 별점 4.5 이상 
        else if user.averageRate >= 4.5 && user.likeID.length >= 30 || user.averageRate >= 4.5 && user.approvedOffers.length >= 20 || user.likeID.length >= 30 && user.approvedOffers.length >= 20
          img.badge__img(src=`${imgPath}/public/gold_badge.png`)
        else
          img.badge__img(src=`${imgPath}/public/brown_badge.png`)
      //- 기본 brown_badge
      else
        img.badge__img(src=`${imgPath}/public/brown_badge.png`)

