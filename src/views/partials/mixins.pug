mixin chooseModal(type, proposal, index, receptionID, proposalID)
  .choose__popup#choose__popup
    .modal.fade(tabindex='-1' role='dialog' aria-hidden='true' id=`${type}__choose-modal${index}`)
        .modal-dialog.modal-dialog-centered(role='document')
          .modal-content
            .modal-body
              button.close(type='button' data-dismiss='modal' aria-label='Close')
                img.modal-close-img(src=`${imgPath}/home/modal_close@3x.png`)
              .modal__contents
                section.contents__step
                  .contents__flex
                    h1.contents__title-center=`Pay(${type === "promotion" ? "Promotion" : "Mix/Master"})`
                    .pay__flex
                      .price__flex
                        h1.price__title Price
                        h1.price__budget=`$${proposal.budget}`
                      .proposal__btn-flex
                        button.form__proposal-btn(type='button' data-dismiss='modal' aria-label='Close') Cancel
                        button.form__proposal-btn.proposal__purchase-btn(type='button' data-proposal=proposalID data-reception=receptionID data-budget=proposal.budget data-type=type) Pay and connect now
                        #created__purchase-form(style="display: none;")

