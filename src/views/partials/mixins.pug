//- favorite Mixin
mixin favoriteCard(item, userRole)
  .item__flex
    .user__profile
      +userProfile(item)
    .user__info-flex
      h1.user__name=item.name
      if item.role === "musician"
        each genre in musicianGenreArr
          if genre.id === item.genre
            h1.user__like-country=`${genre.name}`
            h1.user__like-country=`${item.currentCountry}`
      else
        each title in expertTitleArr
          if title.id === item.title
